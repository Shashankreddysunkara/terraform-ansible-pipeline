module "ec2-instance" {
  source  = "{{ ans_aws_ec2_module_source }}"
  version = "{{ ans_aws_ec2_module_version }}"

  name                        = "{{ans_environment}}-{{ans_app_name}}-bastion"
  ami                         = "${data.aws_ami.amazon_linux.id}"
  key_name                    = "{{ ans_asgec2_key_name }}"
  instance_type               = "{{ ans_asgec2_instance_type }}"
  subnet_id                   = "${element(module.vpc.public_subnets,0)}"
  vpc_security_group_ids      = ["${module.security-group-ssh.this_security_group_id}"]
  associate_public_ip_address = true
}
