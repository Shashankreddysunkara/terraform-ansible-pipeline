module "vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "1.30.0"

  name = "{{ ans_aws_vpc_nonprod_name }}"

  cidr = "{{ ans_aws_vpc_nonprod_cidr }}"

  azs                 = [{{ ans_aws_vpc_nonprod_azs }}]
  private_subnets     = [{{ ans_aws_vpc_nonprod_private_subnets }}]
  public_subnets      = [{{ ans_aws_vpc_nonprod_public_subnets }}]

  create_database_subnet_group = false

  enable_nat_gateway 		= true
  enable_vpn_gateway 		= false

  enable_s3_endpoint 		= true
  enable_dynamodb_endpoint 	= true

  enable_dhcp_options 		= false

  tags = {
    Owner       = "{{ ans_aws_tag_owner }}"
    Environment = "{{ ans_aws_tag_environment }}"
  }
}
